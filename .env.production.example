# Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Database Configuration
POSTGRES_DB=paymentplatform
POSTGRES_USER=paymentuser
POSTGRES_PASSWORD=your_secure_db_password_here
POSTGRES_PORT=5432

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# Application Configuration
SPRING_PROFILES_ACTIVE=production
BACKEND_PORT=8080
FRONTEND_PORT=80
LB_PORT=443
LB_HTTP_PORT=80

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Frontend Build Configuration
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here

# Stripe Configuration (Production Keys)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# OAuth Configuration (Production)
OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_GITHUB_CLIENT_ID=your_github_client_id
OAUTH_GITHUB_CLIENT_SECRET=your_github_client_secret
OAUTH_MICROSOFT_CLIENT_ID=your_microsoft_client_id
OAUTH_MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret

# Logging Configuration
LOGGING_LEVEL=WARN
LOGGING_LEVEL_COM_PLATFORM=INFO

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password

# Build Configuration
BUILD_TARGET=production

# SSL Configuration (for nginx)
SSL_CERT_PATH=/etc/ssl/certs/yourdomain.pem
SSL_KEY_PATH=/etc/ssl/private/yourdomain.key

# Email Configuration (if using SMTP)
SMTP_HOST=smtp.yourmailprovider.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@yourdomain.com
