{
  "name": "payment-platform-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "npm run build && node scripts/analyze-bundle.js",
    "build:performance": "VITE_ANALYZE=true npm run build && npm run analyze:bundle",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,js,jsx,json,css,md}'",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run src/**/*.test.{ts,tsx}",
    "test:integration": "vitest run src/test/integration/",
    "test:validation": "vitest run src/test/integration/api-validation.test.ts",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:coverage:unit": "vitest run --coverage src/**/*.test.{ts,tsx}",
    "test:coverage:integration": "vitest run --coverage src/test/integration/",
    "test:coverage:check": "vitest --coverage --reporter=text --reporter=json-summary && node scripts/check-coverage.js",
    "test:coverage:comprehensive": "node scripts/test-coverage.js",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:enhanced-report": "open test-results/enhanced-report/index.html",
    "test:e2e:evidence": "playwright test --reporter=./tests/e2e/utils/enhanced-reporter.ts",
    "test:e2e:install": "playwright install",
    "test:e2e:auth": "playwright test tests/e2e/auth-flows.spec.ts",
    "test:e2e:payments": "playwright test tests/e2e/payment-flows.spec.ts",
    "test:e2e:enhanced": "playwright test tests/e2e/enhanced-auth-flow.spec.ts",
    "test:e2e:coverage": "VITE_COVERAGE=true playwright test && npm run e2e:coverage:report",
    "e2e:coverage:report": "nyc report --reporter=html --reporter=text-summary --temp-dir coverage/.nyc_output --report-dir coverage/e2e",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:ci": "npm run typecheck && npm run lint && npm run security:audit && npm run test:coverage && npm run test:e2e",
    "typecheck": "tsc --noEmit",
    "security:audit": "npm audit --audit-level=high",
    "security:audit:fix": "npm audit fix",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:build": "typedoc && echo 'TypeDoc documentation generated in ../docs/docs/frontend-api'",
    "pre-push": "npm run typecheck && npm run lint && npm run test:unit",
    "quality:check": "npm run typecheck && npm run lint && npm run format:check && npm run test:unit",
    "quality:fix": "npm run lint:fix && npm run format",
    "analyze:bundle": "node scripts/analyze-bundle.js",
    "perf:audit": "npm run build:analyze && npm run test:e2e -- --reporter=./tests/e2e/utils/performance-reporter.ts",
    "perf:lighthouse": "lhci collect --url=http://localhost:3000 --numberOfRuns=3",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "npm run typecheck"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@headlessui/react": "^2.2.9",
    "@heroicons/react": "^2.0.18",
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-slot": "^1.2.3",
    "@reduxjs/toolkit": "^2.3.0",
    "@stripe/react-stripe-js": "^4.0.2",
    "@stripe/stripe-js": "^7.9.0",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.544.0",
    "playwright": "^1.55.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.63.0",
    "react-hot-toast": "^2.4.1",
    "react-redux": "^9.1.2",
    "react-router-dom": "^7.9.2",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.55.1",
    "@storybook/addon-a11y": "^9.1.8",
    "@storybook/addon-docs": "^9.1.8",
    "@storybook/addon-onboarding": "^9.1.8",
    "@storybook/addon-vitest": "^9.1.8",
    "@storybook/react-vite": "^9.1.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/browser": "3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "3.2.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^9.1.8",
    "globals": "^15.8.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.1",
    "msw": "^2.11.3",
    "nyc": "^17.1.0",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "storybook": "^9.1.8",
    "tailwindcss": "^4.1.13",
    "typedoc": "^0.28.13",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.44.1",
    "vite": "^7.1.7",
    "vite-plugin-istanbul": "^7.2.0",
    "vitest": "^3.2.4"
  }
}
