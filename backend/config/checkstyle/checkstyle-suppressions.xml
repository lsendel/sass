<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
    "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<suppressions>
  <!-- Repository interfaces often contain long annotation strings that are awkward to indent -->
  <suppress files="src/main/java/com/platform/.*/internal/.*Repository\.java" checks="Indentation"/>

  <!-- JPA entities and internal services: avoid DesignForExtension noise that can conflict with proxies -->
  <suppress files="src/main/java/com/platform/.*/internal/.*\.java" checks="DesignForExtension"/>
  <!-- Specific entity/service adjustments -->
  <suppress files="src/main/java/com/platform/auth/internal/TokenMetadata\.java" checks="MagicNumber|LineLength|Indentation"/>

  <!-- Service methods include cross-cutting concerns; limit noise -->
  <suppress files="src/main/java/com/platform/audit/internal/AuditService\.java" checks="DesignForExtension|Indentation|WhitespaceAround"/>

  <!-- Entry class minor indentation variations -->
  <suppress files="src/main/java/com/platform/PaymentPlatformApplication\.java" checks="Indentation"/>
</suppressions>
